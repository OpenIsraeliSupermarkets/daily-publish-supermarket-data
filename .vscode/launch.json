{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Data Validation",
            "type": "debugpy",
            "request": "launch",
            "program": "data_validation/data_serving_validation.py",
            "console": "integratedTerminal",
        },
        {
            "name": "Data Processing Validation",
            "type": "debugpy",
            "request": "launch",
            "program": "data_validation/data_processing_validation.py",
            "console": "integratedTerminal",
        },
        {
            "name": "Test Daliy Raw Dump",
            "type": "debugpy",
            "request": "launch",
            "program": "test_daily_raw_dump.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "envFile": "${workspaceFolder}/.env.test",
        },
        {
            "name": "DEBUG: Daliy Raw Dump",
            "type": "debugpy",
            "request": "launch",
            "program": "main.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "envFile": "${workspaceFolder}/.env.test",
            "env": {
                "OPERATION":"scraping,converting",
                "ENABLED_SCRAPERS":"BAREKET"
            }
        },
        {
            "name": "Python: Debug Tests",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "purpose": ["debug-test"],
            "console": "integratedTerminal",
            "justMyCode": false,
            
        },
        {
            "name": "Access Layer",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/access_layer.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "envFile": "${workspaceFolder}/.env.test",
        },
        {
            "name": "System Tests",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/system_tests/main.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "envFile": "${workspaceFolder}/.env.test",
        },
        {
            "name": "System Tests (Stage)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/system_tests/main.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "envFile": "${workspaceFolder}/.env.stage",
        },
        {
            "name": "FastAPI Test",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "api:app",
                "--reload",
                "--port",
                "8000"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "envFile": "${workspaceFolder}/.env.test"
        },
        {
            "name": "FastAPI prod",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "api:app",
                "--reload",
                "--port",
                "8000"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "envFile": "${workspaceFolder}/.env.prod"
        },
        {
            "name": "Copy Dump From Stage To Prod",
            "type": "debugpy",
            "request": "launch",
            "program": "scripts/copy_from_stage.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "envFile": "${workspaceFolder}/.env.prod",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}