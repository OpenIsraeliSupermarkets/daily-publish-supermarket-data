    "version": "0.2.0",
    "configurations": [

        {
            "name": "Test Daliy Raw Dump",
            "type": "debugpy",
            "request": "launch",
            "program": "test_daily_raw_dump.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "envFile": "${workspaceFolder}/.env.test",
        },
        {
            "name": "Daliy Raw Dump",
            "type": "debugpy",
            "request": "launch",
            "program": "daily_raw_dump.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "envFile": "${workspaceFolder}/.env.test",
            "env": {
                "OPREATION":"scraping,converting,api_update,clean_dump_files"
            }
        },
        {
            "name": "Python: Debug Tests",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "purpose": ["debug-test"],
            "console": "integratedTerminal",
            "justMyCode": false,
            
        },
        {
            "name": "Access Layer",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/access_layer.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "envFile": "${workspaceFolder}/.env.test",
        },
        {
            "name": "FastAPI Test",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "api:app",
                "--reload",
                "--port",
                "8000"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "envFile": "${workspaceFolder}/.env.test"
        },
        {
            "name": "FastAPI prod",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "api:app",
                "--reload",
                "--port",
                "8000"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "envFile": "${workspaceFolder}/.env.prod"
        }
    ]
